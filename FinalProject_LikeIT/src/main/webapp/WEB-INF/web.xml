<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>LikeItServlet</servlet-name>
        <display-name>LikeItServlet</display-name>
        <servlet-class>com.kolyadko.likeit.controller.LikeItServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LikeItServlet</servlet-name>
        <url-pattern>/Home</url-pattern>
        <url-pattern>/Login</url-pattern>
        <url-pattern>/SignUp</url-pattern>
        <url-pattern>/About</url-pattern>
        <url-pattern>/Users</url-pattern>
        <url-pattern>/Profile</url-pattern>
        <url-pattern>/TOP</url-pattern>
        <url-pattern>/Recent</url-pattern>
        <url-pattern>/Error</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.kolyadko.likeit.listener.LikeItListener</listener-class>
    </listener>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.kolyadko.likeit.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <location>/jsp/error.jsp</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.RuntimeException</exception-type>
        <location>/jsp/error.jsp</location>
    </error-page>
</web-app>